
<!DOCTYPE html>

<html>

<head>

    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>

    <!-- Stylesheets -->
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootswatch/sandstone/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
    @RenderSection("Styles", false)
</head>

<body>
      @Html.Partial("_NavBar")       
    <div id="layout">
        <div id="content">
            <!-- Site Content -->
            <div class="content">
                @RenderBody()
            </div>
        </div>
    </div>
  
       

        <!-- Footer -->
        <footer class="modal-footer">
            <div class="container">
                <h4 class="text-muted text-center"> &copy; @DateTime.Now.Year Daniil Dudin</h4>
                <h6 class="text-center">powered by <a href="https://github.com/Softenraged/CoreBlog">CoreBlog</a></h6>
            </div>
        </footer>
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>   
    @RenderSection("Scripts", false)
</body>
</html>